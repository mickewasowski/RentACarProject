@using RentACar.Data.Models;

@model RentACar.Web.ViewModels.User.EditMyProfileViewModel;
@{
    this.ViewData["Title"] = "Edit profile";
}

<form method="post" style="        -webkit-box-shadow: 9px 7px 28px 5px rgba(0,0,0,0.76);
        -moz-box-shadow: 9px 7px 28px 5px rgba(0,0,0,0.76);
        box-shadow: 9px 7px 28px 5px rgba(0,0,0,0.76);
        width: fit-content;
        color: rgb(28, 51, 235);
        margin: auto;
        margin-top: 25px;
        padding-left: 25px;
        padding-right: 25px;
        padding-bottom: 30px;
        padding-top: 30px;
        border-radius: 10px;
        background: rgb(211,203,207);
        background: linear-gradient(0deg, rgba(211,203,207,1) 0%, rgba(217,234,104,1) 96%, rgba(232,230,118,0.7206232834930848) 100%);">
    <div class="form-group">
        <label asp-for="@Model.FullName">First and Last Name</label>
        <input asp-for="@Model.FullName" class="form-control" placeholder="Austin Smith">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Age"></label>
        <input asp-for="@Model.Age" class="form-control" placeholder="25">
    </div>
    <div class="form-group col">
        <label asp-for="LicenseCategories">Coupe type</label>
        <select asp-for="LicenseCategories" class="form-control" asp-items="@Html.GetEnumSelectList<LicenseCategory>()"></select>
        <span asp-validation-for="LicenseCategories" class="text-danger"></span>
    </div>
    <div class="row justify-content-xl-center" style="margin-top:40px;justify-content:center;">
        <button type="submit" style="width: 120px;height: 40px;background-color: rgb(236, 151, 31);border: none;border-radius: 3px;color: white;">Save Changes</button>
    </div>
</form>